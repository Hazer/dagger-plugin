<idea-plugin>
    <id>com.madrapps.dagger-plugin</id>
    <name>Dagger</name>
    <vendor email="madrasappfactory@gmail.com" url="https://github.com/Madrapps">Madrapps</vendor>

    <description><![CDATA[
    Plugin to support working with Dagger 2 library</br>
    ]]></description>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>
    <depends>org.jetbrains.kotlin</depends>
    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">

        <toolWindow anchor="right" factoryClass="com.madrapps.dagger.toolwindow.DaggerToolWindow"
                    icon="/icons/greenrobot.png" id="Dagger"/>
    </extensions>

    <project-components>
        <component>
            <implementation-class>com.madrapps.dagger.MyComponent</implementation-class>
        </component>
    </project-components>

    <actions>
        <action id="com.madrapps.dagger.actions.RefreshAction"
                class="com.madrapps.dagger.actions.RefreshAction"
                icon="AllIcons.Actions.Refresh"
                text="Refresh">
        </action>
    </actions>
</idea-plugin>